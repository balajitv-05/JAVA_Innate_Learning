import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        
        String name = s.next();
        int followers = s.nextInt();
        int posts = s.nextInt();
        float timespent = s.nextFloat();
        
        System.out.println("My name is "+name+", my Instagram has "+followers+" followers, I have posted "+posts+" posts, and I use Instagram for "+timespent+" hours daily.");
    }
}
