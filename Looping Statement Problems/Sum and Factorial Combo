import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s =  new Scanner (System.in);
        int a = s.nextInt();
        int sum =0;
        for(int i = 1;i<=a;i++)
        {
            sum = sum +i;
        }
        System.out.println(sum);
        int x = fact(a);
        System.out.println(x);
    }
    public static int fact(int n)
    {
        if(n == 1) return 1;
        else return n * fact(n-1);
    }
}
